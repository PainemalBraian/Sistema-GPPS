<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="550.0" prefWidth="800.0" styleClass="root" stylesheets="@../StyleSheets/inscripcionpps.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Frontend.com.gui.Controller.InscripcionPPSController">
<children>
    <SplitPane dividerPositions="0.3" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <items>
            <AnchorPane minHeight="0.0" minWidth="0.0" prefWidth="200.0" styleClass="list-pane">
                <children>
                    <Label layoutX="1.0" layoutY="7.0" prefHeight="53.0" prefWidth="236.0" styleClass="panel-title" text="Oportunidades de PPS Disponibles" AnchorPane.leftAnchor="1.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="7.0">
                        <font>
                            <Font name="System Bold" size="14.0" />
                        </font>
                    </Label>
                    <ListView fx:id="lvOportunidades" layoutX="14.0" layoutY="44.0" prefHeight="490.0" prefWidth="226.0" styleClass="opportunity-list" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="40.0" />
                  <Button fx:id="btnVolverHome" alignment="CENTER" contentDisplay="RIGHT" layoutX="49.0" layoutY="494.0" mnemonicParsing="false" onAction="#VolverHome" prefHeight="13.0" prefWidth="124.0" styleClass="inscribe-button" text="Volver" textAlignment="CENTER" />
                </children>
            </AnchorPane>
            <AnchorPane minHeight="0.0" minWidth="0.0" prefWidth="596.0" styleClass="detail-pane">
                <children>
                    <VBox fx:id="vboxDetail" layoutX="14.0" layoutY="14.0" prefWidth="560.0" spacing="10.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
                        <children>
                            <Label fx:id="lblTituloOportunidad" styleClass="detail-title" text="Selecciona una oportunidad" wrapText="true">
                                <font>
                                    <Font name="System Bold" size="16.0" />
                                </font>
                            </Label>
                            <Label fx:id="lblEmpresa" styleClass="detail-subtitle" text="Empresa: -" wrapText="true" />
                            <Label fx:id="lblArea" styleClass="detail-subtitle" text="Área: -" wrapText="true" />
                            <Label fx:id="lblVacantes" styleClass="detail-subtitle" text="Vacantes: -" />
                            <Label fx:id="lblDescripcionLabel" styleClass="detail-label" text="Descripción:" />
                            <TextArea fx:id="taDescripcion" editable="false" prefHeight="150.0" prefWidth="200.0" styleClass="detail-description" wrapText="true" VBox.vgrow="ALWAYS" />
                            <Label fx:id="lblRequisitosLabel" styleClass="detail-label" text="Requisitos:" />
                            <TextArea fx:id="taRequisitos" editable="false" prefHeight="100.0" prefWidth="200.0" styleClass="detail-requirements" wrapText="true" VBox.vgrow="ALWAYS" />
                            <Button fx:id="btnInscribir" contentDisplay="CENTER" mnemonicParsing="false" onAction="#handleInscribir" prefHeight="40.0" prefWidth="192.0" styleClass="inscribe-button" text="Inscribirme a esta PPS" />
                        </children>
                    </VBox>
                </children>
            </AnchorPane>
        </items>
    </SplitPane>
</children>
</AnchorPane>
