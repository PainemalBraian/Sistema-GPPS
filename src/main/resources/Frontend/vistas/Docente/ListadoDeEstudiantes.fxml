<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="700.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Frontend.com.gui.Controller.Docente.ListadoDeEstudiantesController">
    <children>
        <BorderPane AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">

            <top>
                <HBox alignment="CENTER_LEFT" spacing="10" styleClass="header-box" stylesheets="@../../StyleSheets/Docente/ListadoDeEstudiantes.css">
                    <padding>
                        <Insets top="20" right="20" bottom="20" left="20"/>
                    </padding>
                    <Label styleClass="header-title" text="Listado de Estudiantes y Prácticas Profesionales"/>
                </HBox>
            </top>

            <center>
                <VBox spacing="15" padding="20" styleClass="content-area" stylesheets="@../../StyleSheets/Docente/ListadoDeEstudiantes.css">

                    <!-- Filtros -->
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Filtrar por estado de práctica:" styleClass="filter-label"/>
                        <ComboBox fx:id="filtroEstadoPractica" prefWidth="150.0" styleClass="filter-combo"/>
                    </HBox>

                    <!-- Tabla de estudiantes -->
                    <TableView fx:id="tablaEstudiantes" prefHeight="450" prefWidth="950" styleClass="students-table">
                        <columns>
                            <TableColumn fx:id="colNombre" text="Nombre" prefWidth="120" />
                            <TableColumn fx:id="colCarrera" text="Carrera" prefWidth="100" />
                            <TableColumn fx:id="colCorreo" text="Correo" prefWidth="140" />
                            <TableColumn fx:id="colProyecto" text="Título del Proyecto" prefWidth="180" />
                            <TableColumn fx:id="colTutor" text="Tutor" prefWidth="120" />
                            <TableColumn fx:id="colEmpresa" text="Empresa/Entidad" prefWidth="140" />
                            <TableColumn fx:id="colDuracion" text="Duración" prefWidth="80" />
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                    </TableView>

                    <!-- Botones de acción -->
                    <HBox spacing="10" alignment="CENTER_LEFT" styleClass="action-buttons">
                        <Button fx:id="btnVerCronograma" onAction="#verCronograma" text="Ver Cronograma"
                                styleClass="action-button" disable="true"/>
                        <Button fx:id="btnVerAvances" onAction="#verAvances" text="Ver Avances"
                                styleClass="action-button" disable="true"/>
                        <Button fx:id="btnVerInformes" onAction="#verInformes" text="Ver Informes"
                                styleClass="action-button" disable="true"/>
                        <Button fx:id="btnComunicaciones" onAction="#verComunicaciones" text="Comunicaciones"
                                styleClass="action-button" disable="true"/>
                    </HBox>

                    <!-- Botón volver -->
                    <HBox spacing="10" alignment="CENTER_RIGHT">
                        <Button fx:id="btnVolver" onAction="#volverHome" text="Volver al Menú Principal"
                                styleClass="back-button"/>
                    </HBox>

                </VBox>
            </center>

        </BorderPane>
    </children>
</AnchorPane>