<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="599.0" prefWidth="691.0" styleClass="vista-tareas-pane" stylesheets="@../StyleSheets/tareas.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Frontend.com.gui.Controller.TareasController">
    <children>
        <VBox layoutX="14.0" layoutY="9.0" prefHeight="522.0" prefWidth="536.0" spacing="15.0" AnchorPane.bottomAnchor="15.0" AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="49.0" AnchorPane.topAnchor="9.0">
            <children>
                <Label styleClass="titulo-seccion" text="Gestión de Tareas de PPS" />

                <HBox spacing="20.0" VBox.vgrow="ALWAYS">
                    <children>
                        <VBox spacing="10.0" styleClass="seccion-tareas" HBox.hgrow="ALWAYS">
                            <children>
                                <Label styleClass="subtitulo-tareas" text="Registrar Nueva Tarea Realizada" />
                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <children>
                                        <Label minWidth="60" text="Fecha:" />
                                        <DatePicker fx:id="datePickerFechaTarea" prefWidth="150.0" />
                                    </children>
                                </HBox>
                                <Label text="Descripción de la Tarea:" />
                                <TextArea fx:id="textAreaDescripcionTarea" prefHeight="70.0" wrapText="true" />
                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <children>
                                        <Label minWidth="80" text="Duración (hs):" />
                                        <TextField fx:id="textFieldDuracionTarea" prefWidth="70.0" />
                                    </children>
                                </HBox>
                                <HBox spacing="10.0">
                                    <children>
                                        <Button fx:id="btnActualizarTarea" mnemonicParsing="false" onAction="#handleActualizarTarea" styleClass="boton-secundario-tareas" text="Actualizar" visible="false" />
                                        <Button fx:id="btnAgregarTarea" mnemonicParsing="false" onAction="#handleAgregarTarea" styleClass="boton-primario-tareas" text="Agregar Tarea" />

                                    </children>
                                </HBox>

                                <Label styleClass="subtitulo-tareas" text="Mis Tareas Registradas" />
                                <TableView fx:id="tableViewTareas" prefHeight="150" VBox.vgrow="ALWAYS">
                                    <columns>
                                        <TableColumn fx:id="columnaFecha" prefWidth="85.0" text="Fecha" />
                                        <TableColumn fx:id="columnaDescripcion" prefWidth="180.0" text="Descripción" />
                                        <TableColumn fx:id="columnaDuracion" prefWidth="60.0" text="Duración" />
                                    </columns>
                                    <columnResizePolicy>
                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                    </columnResizePolicy>
                                </TableView>
                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <Button fx:id="btnEliminarTarea" mnemonicParsing="false" onAction="#handleEliminarTarea" prefHeight="36.0" prefWidth="121.0" styleClass="boton-accion-peligro-tareas" text="Eliminar Sel." />
                                    <Button fx:id="btnEditarTarea" mnemonicParsing="false" onAction="#handleEditarTarea" prefHeight="36.0" prefWidth="112.0" styleClass="boton-accion-tareas" text="Editar Sel." />
                                </HBox>
                                  <Button fx:id="btnVolverHome" alignment="CENTER" contentDisplay="RIGHT" mnemonicParsing="false" onAction="#VolverHome" prefHeight="40.0" prefWidth="131.0" styleClass="inscribe-button" text="Volver" textAlignment="CENTER" />
                            </children>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </padding>
                        </VBox>

                        <VBox prefHeight="537.0" prefWidth="367.0" spacing="10.0" styleClass="seccion-info-tareas" HBox.hgrow="NEVER">
                            <children>
                                <Label prefHeight="20.0" prefWidth="181.0" styleClass="subtitulo-tareas" text="Cronograma Planificado" />
                                <ListView fx:id="listViewCronograma" prefHeight="160.0" VBox.vgrow="SOMETIMES" />

                                <Label styleClass="subtitulo-tareas" text="Avance General" />
                                <VBox alignment="CENTER_LEFT" spacing="5.0">
                                    <children>
                                        <Label fx:id="labelPorcentajeAvance" text="0%">
                                            <font>
                                                <Font name="System Bold" size="20.0" />
                                            </font>
                                        </Label>
                                        <ProgressBar fx:id="progressBarAvance" prefWidth="200.0" progress="0.0" />
                                        <Label fx:id="labelHorasCompletadas" style="-fx-font-size: 11px;" text="Horas: 0 / 0" />
                                    </children>
                                    <padding>
                                        <Insets top="5.0" />
                                    </padding>
                                </VBox>
                            </children>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </padding>
                        </VBox>
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>
