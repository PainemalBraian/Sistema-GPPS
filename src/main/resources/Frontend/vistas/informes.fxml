<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="550.0" prefWidth="600.0" styleClass="vista-informes-pane" stylesheets="@../StyleSheets/informes.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Frontend.com.gui.Controller.InformesController">
    <children>
        <VBox layoutX="14.0" layoutY="14.0" prefHeight="522.0" prefWidth="572.0" spacing="20.0" AnchorPane.bottomAnchor="14.0" AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="14.0" AnchorPane.topAnchor="14.0">
            <children>
                <Label styleClass="titulo-seccion-informes" text="Gestión de Informes de PPS" />

                <VBox spacing="10.0" styleClass="seccion-contenido-informes">
                    <children>
                        <Label styleClass="subtitulo-informes" text="Cargar Nuevo Informe" />
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <children>
                                <Button fx:id="btnSeleccionarArchivo" mnemonicParsing="false" onAction="#handleSeleccionarArchivo" text="Seleccionar Archivo PDF..." />
                                <Label fx:id="lblNombreArchivoSeleccionado" style="-fx-text-fill: #555;" text="Ningún archivo seleccionado" HBox.hgrow="ALWAYS" />
                            </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <children>
                                <Label minWidth="100" text="Tipo de Informe:" />
                                <ComboBox fx:id="comboBoxTipoInforme" prefWidth="200.0" promptText="Seleccionar tipo" />
                            </children>
                        </HBox>
                        <Label fx:id="lblMensajeCarga" style="-fx-font-style: italic;" text="" />
                        <Button fx:id="btnCargarInforme" disable="true" mnemonicParsing="false" onAction="#handleCargarInforme" styleClass="boton-primario-informes" text="Cargar Informe" />
                    </children>
                    <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                    </padding>
                </VBox>

                <VBox spacing="10.0" VBox.vgrow="ALWAYS">
                    <children>
                        <Label styleClass="subtitulo-informes" text="Mis Informes Cargados" />
                        <TableView fx:id="tableViewInformes" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="columnaNombreArchivo" prefWidth="220.0" text="Nombre del Archivo" />
                                <TableColumn fx:id="columnaTipoInforme" prefWidth="100.0" text="Tipo" />
                                <TableColumn fx:id="columnaFechaCarga" prefWidth="130.0" text="Fecha de Carga" />
                                <TableColumn fx:id="columnaEstado" prefWidth="100.0" text="Estado" />
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>
                    </children>
                </VBox>
                  <Button fx:id="btnVolverHome" alignment="CENTER" contentDisplay="RIGHT" mnemonicParsing="false" onAction="#VolverHome" prefHeight="13.0" prefWidth="124.0" styleClass="inscribe-button" text="Volver" textAlignment="CENTER" />
            </children>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>
